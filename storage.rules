rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow anyone to READ images (so dashboard can display them)
    match /{allPaths=**} {
      allow read: if true;
    }

    // IoT device captures — allow unauthenticated write to iot-reports/ folder only
    match /iot-reports/{deviceId}/{filename} {
      allow write: if true;
    }

    // User-uploaded report images — require sign-in
    match /report-images/{userId}/{filename} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
